<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CampoPerfil">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_field_card</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="CampoLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Widget.App.EditText" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_edittext_rounded</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="EstiloEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_edittext_rounded</item>
    </style>

    <style name="EstiloSpinnerOculto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/bg_spinner_rounded</item>
        <item name="android:padding">12dp</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>