<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:background="@drawable/card_background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvNombreProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Proyecto"
            android:textSize="20sp"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvFechasProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha Inicio - Fecha Fin"
            android:textSize="14sp"
            android:textColor="#558B2F"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tvDescripcionProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción breve del proyecto que da una idea clara y concisa."
            android:textSize="15sp"
            android:textColor="#555555"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="2dp"
            android:fontFamily="sans-serif-light" />

        <!-- Un pequeño botón o etiqueta para acciones podría ir aquí -->
        <Button
            android:id="@+id/btnVerDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver detalles"
            android:background="@drawable/button_rounded_shadow"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_marginTop="14dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            android:elevation="4dp"
            android:stateListAnimator="@null"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
