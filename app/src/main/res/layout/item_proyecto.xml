<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNombreProyecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Proyecto"
            android:textSize="18sp"
            android:textColor="#1B5E20"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvFechasProyecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Inicio - Fecha Fin"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvDescripcionProyecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n breve del proyecto"
            android:textSize="14sp"
            android:textColor="#444"
            android:layout_marginTop="6dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
