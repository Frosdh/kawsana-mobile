<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewProyectos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F8E9"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/layoutProyectos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título de la sección -->
        <TextView
            android:id="@+id/tvTituloLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proyectos registrados"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="16dp" />

        <!-- Card de ejemplo (solo diseño, luego lo llenas desde código) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTituloProyectoEjemplo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Proyecto"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDescripcionProyectoEjemplo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción breve del proyecto."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnVerProyectoEjemplo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver más"
                    android:backgroundTint="#388E3C"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
