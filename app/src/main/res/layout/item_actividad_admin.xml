<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Nombre Actividad -->
        <TextView
            android:id="@+id/tvNombreActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📌 Nombre de la Actividad"
            android:textColor="#2E7D32"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Línea decorativa -->
        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="#2E7D32" />

        <!-- Fechas -->
        <TextView
            android:id="@+id/tvFechasActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🗓️ Desde: 01/01/2025 - Hasta: 01/02/2025"
            android:textColor="#616161"
            android:textSize="14sp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcionActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="📝 Descripción de la actividad"
            android:textColor="#424242"
            android:textSize="14sp" />

        <!-- Puntos -->
        <TextView
            android:id="@+id/tvPuntosActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="⭐ Puntos: 50"
            android:textColor="#00897B"
            android:textStyle="bold"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
