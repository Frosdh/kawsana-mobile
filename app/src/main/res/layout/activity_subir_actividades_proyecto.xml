<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E6F0E6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- T铆tulo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Registro de Evidencia"
                    android:textColor="#0D47A1"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="20dp" />

                <!-- Preview de la c谩mara -->
                <androidx.camera.view.PreviewView
                    android:id="@+id/previewView"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="#ECEFF1"
                    android:layout_marginBottom="16dp"
                    android:clipToOutline="true"
                    android:elevation="4dp" />

                <!-- Bot贸n para capturar foto -->
                <Button
                    android:id="@+id/btnCapturarFoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Tomar Foto"
                    android:background="@drawable/btn_rounded_green"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Imagen tomada -->
                <ImageView
                    android:id="@+id/imgEvidencia"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/image_placeholder"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Imagen de evidencia"
                    android:elevation="6dp" />

                <!-- Bot贸n seleccionar desde galer铆a -->
                <Button
                    android:id="@+id/btnSeleccionarImagen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Seleccionar desde Galer铆a"
                    android:background="@drawable/btn_rounded_green"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Descripci贸n -->
                <EditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="锔 Describe la actividad"
                    android:minLines="3"
                    android:background="@drawable/bg_edittext_rounded"
                    android:padding="16dp"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Fecha -->
                <EditText
                    android:id="@+id/etFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Fecha (YYYY-MM-DD)"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:background="@drawable/bg_edittext_rounded"
                    android:padding="16dp"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginBottom="24dp" />

                <!-- Bot贸n subir -->
                <Button
                    android:id="@+id/btnSubir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Subir Actividad"
                    android:background="@drawable/btn_rounded_green"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
