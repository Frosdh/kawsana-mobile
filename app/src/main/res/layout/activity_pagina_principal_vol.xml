<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <TextView
            android:id="@+id/tvSaludo"
            android:text="👋 Hola, ..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnVerPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Perfil"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#66BB6A"
            android:layout_marginTop="24dp"/>


        <TextView
            android:id="@+id/tvPuntos"
            android:text="🔥 Puntos: ..."
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvInsignias"
            android:text="🏅 Insignias:"
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="📅 Proyectos Disponibles"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvProyectosDisponibles"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="📅 Próximas Actividades"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvActividades"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="📰 Noticias"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvNoticias"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="📈 Avance del barrio"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:id="@+id/progressBarAvance"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#81C784"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvAvance"
            android:text="--%"
            android:textSize="16sp"
            android:textColor="#2E7D32"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
