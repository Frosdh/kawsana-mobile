<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F8E9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloSuperAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel Super Administrador"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="20dp" />

        <!-- Perfil Super Admin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_card_rounded"
            android:padding="16dp"
            android:elevation="6dp">

            <ImageView
                android:id="@+id/imgPerfilSuper"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icono_kausana"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvNombreSuperAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: Super Admin"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvCorreoSuperAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo: superadmin@ejemplo.com"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnVerPerfilSuper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver perfil completo"
                android:backgroundTint="#66BB6A"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Título Dashboard -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opciones del Administrador"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp" />

        <!-- Dashboard con opciones -->
        <GridLayout
            android:id="@+id/menuGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <!-- Gestionar Organizaciones -->
            <LinearLayout
                android:id="@+id/cardOrganizaciones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/bg_card_rounded"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Organizaciones"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Ver Líderes -->
            <LinearLayout
                android:id="@+id/cardLideres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/bg_card_rounded"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Líderes"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Ver Actividades -->
            <LinearLayout
                android:id="@+id/cardActividades"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/bg_card_rounded"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Actividades"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Ver Estadísticas -->
            <LinearLayout
                android:id="@+id/cardGraficas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/bg_card_rounded"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Gráficas"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </GridLayout>
    </LinearLayout>
</ScrollView>
