<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollDetalleProyecto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"

    android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/bg_card_proyecto"
        android:elevation="8dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="16dp">

        <!-- Título del Proyecto -->
        <TextView
            android:id="@+id/tvNombreProyectoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Proyecto"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="16dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcionProyectoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del proyecto"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- Fechas -->
        <TextView
            android:id="@+id/tvFechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de inicio: "
            android:textColor="#555555"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvFechaFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de fin: "
            android:textColor="#555555"
            android:layout_marginBottom="16dp" />

        <!-- Organización -->
        <TextView
            android:id="@+id/tvNombreOrganizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organización: "
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvDireccionOrganizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección: "
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvTelefonoOrganizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono: "
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvRepresentanteOrganizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Representante: "
            android:textColor="#444444"
            android:layout_marginBottom="20dp" />

        <!-- Botón -->
        <Button
            android:id="@+id/btnRegistrarseProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse a este proyecto"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_green_selector"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
