<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".presentacion.ui.Registro_voluntario">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contenedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icono_kausana"
                android:contentDescription="Logo de Kawsana" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar Usuario"
                android:textSize="24sp"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etCedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cédula"
                android:inputType="text"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono"
                android:inputType="phone"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dirección"
                android:inputType="textPostalAddress"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="12dp" />

            <Spinner
                android:id="@+id/spinnerTipoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etPasswordAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña Admin"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:visibility="gone"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btnLupa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:text="Buscar"
                android:drawableStart="@drawable/lupa"
            android:contentDescription="Buscar" />


            <Spinner
                android:id="@+id/spinnerCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_bg"
                android:contentDescription="ciudad"
                android:padding="12dp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinnerParroquia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinnerBarrio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar Usuario"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#66BB6A"
                android:layout_marginTop="24dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
