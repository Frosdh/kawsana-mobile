<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".presentacion.ui.Perfil_voluntario">

    <LinearLayout
        android:id="@+id/contenedorPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoPerfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icono_kausana"
            android:contentDescription="Logo de Kawsana" />

        <TextView
            android:id="@+id/titlePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textSize="24sp"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etCedulaPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cédula"
            android:inputType="text"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etNombresPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombres"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etApellidosPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etEmailPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etTelefonoPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etDireccionPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección"
            android:inputType="textPostalAddress"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#66BB6A"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnModificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#388E3C"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
