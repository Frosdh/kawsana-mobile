<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F5E9"
    android:padding="16dp">

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título Actividades Pendientes -->
            <TextView
                android:id="@+id/tvTituloActividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actividades pendientes por subir"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" />

            <!-- Contenedor de actividades pendientes -->
            <LinearLayout
                android:id="@+id/layoutProyectos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Título Actividades Subidas -->
            <TextView
                android:id="@+id/tvTituloActividadesSubidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actividades ya subidas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:paddingBottom="8dp" />

            <!-- Contenedor de actividades subidas -->
            <LinearLayout
                android:id="@+id/layoutProyectosSubidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>
