<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6F0E6"
    android:paddingLeft="8dp"
    android:paddingTop="30dp"
    android:paddingRight="8dp"
    android:paddingBottom="16dp">

    <!-- T铆tulo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_card_rounded"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloActividadesAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.12"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="ACTIVIDADES POR PROYECTO"
            android:textAlignment="center"
            android:textColor="#090909"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Secci贸n Pendientes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Actividades pendientes por subir"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#33691E"
                android:paddingVertical="12dp" />

            <LinearLayout
                android:id="@+id/layoutPendientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_sin_subir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B0BEC5"
                android:layout_marginBottom="24dp" />

            <!-- Secci贸n En revisi贸n -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Actividades subidas en espera de validaci贸n"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF8F00"
                android:paddingVertical="12dp" />

            <LinearLayout
                android:id="@+id/layoutEnRevision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_en_revision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B0BEC5"
                android:layout_marginBottom="24dp" />

            <!-- Secci贸n Aprobadas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Actividades finalizadas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#B71C1C"
                android:paddingVertical="12dp" />

            <LinearLayout
                android:id="@+id/layoutAprobadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_aprobadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
