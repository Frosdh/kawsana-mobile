<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="5dp"
    android:backgroundTint="#E6F4EA"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tvNombreLider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Líder"
            android:textColor="#2E7D32"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <View
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:background="#2E7D32"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/tvCorreoLider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="correo@ejemplo.com"
            android:textColor="#4A4A4A"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:drawablePadding="6dp" />

        <TextView
            android:id="@+id/tvTelefonoLider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono del Líder"
            android:textColor="#4A4A4A"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:drawablePadding="6dp" />


        <Button
            android:id="@+id/btnVerProyectos"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_rounded_shadow"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:stateListAnimator="@null"
            android:text="Ver Voluntarios"
            android:textAllCaps="false"
            android:textColor="#fff" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
