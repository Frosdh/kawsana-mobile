<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/layoutCardActividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre de la actividad -->
        <TextView
            android:id="@+id/tvNombreActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Actividad"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcionActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción de la actividad"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp" />

        <!-- Fechas -->
        <TextView
            android:id="@+id/tvFechasActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 Fecha inicio - Fecha fin"
            android:textSize="14sp"
            android:textColor="#424242"
            android:layout_marginTop="8dp" />

        <!-- Puntos -->
        <TextView
            android:id="@+id/tvPuntosActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐ Puntos: 10"
            android:textSize="14sp"
            android:textColor="#388E3C"
            android:layout_marginTop="6dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
